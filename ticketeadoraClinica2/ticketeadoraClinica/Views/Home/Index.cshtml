@{
    ViewData["Title"] = "Principal";
}

<style>
    body {
        background: linear-gradient(to bottom right, #e3f2fd, #bbdefb);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .card-clinica {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        padding: 30px;
        animation: fadeIn 1s ease-in-out;
    }

    .titulo {
        color: #0d6efd;
        font-weight: 700;
    }

    .input-dni {
        height: 70px;
        font-size: 26px;
        text-align: center;
        border-radius: 10px;
        border: 2px solid #0d6efd;
        width: 100%;
    }

    .teclado input {
        width: 80px;
        height: 80px;
        font-size: 24px;
        margin: 6px;
        border-radius: 10px;
    }

    .btn-confirmar {
        width: 100%;
        font-size: 22px;
        height: 60px;
    }

    .btn-borrar {
        width: 100%;
        font-size: 22px;
        height: 60px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="card-clinica text-center">
    <h1 class="titulo mb-3">CLÍNICA KERO</h1>
    <p class="text-secondary mb-4">Por favor, ingrese su DNI</p>

    <form asp-controller="Home" asp-action="ConfirmarDni" method="post">
        <input class="input-dni mb-3" id="TextoDni" name="dni" type="text" readonly />

        <div class="teclado mb-4">
            @for (int i = 1; i <= 9; i++)
            {
                <input type="button" value="@i" class="btn btn-light" onclick="agregarNumero('@i')" />
                if (i % 3 == 0)
                {
                    <br />
                }
            }
            <input type="button" value="0" class="btn btn-light" onclick="agregarNumero('0')" />
        </div>

        <div class="d-grid gap-2">
            <input type="submit" value="CONFIRMAR" class="btn btn-success btn-confirmar" />
            <input type="button" value="BORRAR" class="btn btn-danger btn-borrar" onclick="borrarNumero()" />
        </div>
    </form>
</div>

<script>
    function agregarNumero(num) {
        const input = document.getElementById('TextoDni');
        input.value += num;
    }

    function borrarNumero() {
        const input = document.getElementById('TextoDni');
        input.value = input.value.slice(0, -1);
    }
</script>
