@{
    ViewData["Title"] = "Turno asignado";
}

<style>
    .fade-in {
        animation: fadeIn 1.2s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>


<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-lg p-4 text-center fade-in" style="max-width: 500px; border-radius: 20px;">
        <h2 class="text-success mb-3">¡Turno asignado con éxito!</h2>

        <div class="display-3 fw-bold text-primary mb-3">
            @ViewBag.CodigoTurno
        </div>

        @if (ViewBag.TieneDiscapacidad == true)
        {
            <div class="alert alert-info" role="alert">
                <i class="bi bi-wheelchair"></i>
                Turno especial por discapacidad.
            </div>
        }
        else if (ViewBag.EsPrioritario == true)
        {
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-person-arms-up"></i>
                Turno prioritario (embarazada o adulto mayor).
            </div>
        }
        else
        {
            <div class="alert alert-secondary" role="alert">
                Turno de atención general.
            </div>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Volver al inicio
            </a>
        </div>
    </div>
</div>
